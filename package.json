{
  "name": "bidmaster-backend",
  "version": "1.0.0",
  "description": "Backend for Online Bidding Platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "jest --coverage",
    "migrate": "npx ts-node src/scripts/migrate.ts",
    "seed": "npx ts-node src/scripts/seed.ts",
    "render:setup": "npm install && npm run build && npm run migrate",
    "render:deploy": "render deploy",
    "docker:build": "docker build -t bidmaster-backend .",
    "docker:run": "docker run -p 5000:5000 bidmaster-backend",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.2",
    "@types/redis": "^4.0.11",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.8",
    "aws-sdk": "^2.1531.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.5",
    "bull-board": "^3.15.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.3.1",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
