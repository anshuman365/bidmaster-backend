{
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "copy-files": "cp -r src/public dist/ 2>/dev/null || true",
    "migrate": "npx ts-node src/scripts/migrate.ts",
    "seed": "npx ts-node src/scripts/seed.ts",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "render:deploy": "render deploy",
    "render:logs": "render logs",
    "postinstall": "npm run build"
  }
}