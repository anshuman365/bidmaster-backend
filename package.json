    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "razorpay": "^2.9.2",
    "redis": "^4.6.13",
    "sequelize": "^6.35.1",
    "sequelize-cli": "^6.6.2",
    "sharp": "^0.33.2",
    "socket.io": "^4.7.4",
    "stripe": "^14.16.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
